{
    "compileOnSave": true,
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "build",
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": false,
        "lib":["es2016","dom"]
    },
    "filesGlob": [
        "typings/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "build",
        "ios",
        "android"
    ]
}