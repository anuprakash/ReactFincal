{
    "compileOnSave": true,
    "compilerOptions": {
        //"module": "commonjs", //es5 + CommonJS or ES6 only
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "tsout",
        //"rootDir": "src",
        "allowSyntheticDefaultImports": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "filesGlob": [
        "typings/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "tsout"
    ]
}